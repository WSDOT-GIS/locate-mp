{
  "name": "arcgis-mp",
  "private": true,
  "version": "0.0.0",
  "description": "Milepost map written with ArcGIS Maps API for JavaScript",
  "type": "module",
  "scripts": {
    "prepare": "tsx tools/copy-wsdot-webstyles.ts",
    "build": "vite build",
    "watch": "vite build -- --watch",
    "preview": "vite preview",
    "build-and-preview": "npm run build && npm run preview -- --open",
    "clean": "git clean -dfx --exclude \"node_modules/**\" --exclude \".mailmap\" --exclude \".env.local\"",
    "dev": "vite",
    "lint": "eslint . --fix",
    "prettier": "prettier . --write",
    "publish": "npm run build && node tools/publish.mjs",
    "test": "vitest run --bail 1",
    "test:watch": "vitest",
    "spell": "cspell ."
  },
  "devDependencies": {
    "@arcgis/core": "^4.30.9",
    "@eslint/js": "^9.7.0",
    "@esri/arcgis-rest-request": "^4.2.3",
    "@fontsource/overpass": "^5.0.18",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/arcgis-rest-api": "^10.4.8",
    "@types/browser-update": "^3.3.3",
    "@types/node": "^22.2.0",
    "@vitest/coverage-istanbul": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "browserslist-to-esbuild": "^2.1.1",
    "cspell": "^8.13.3",
    "eslint": "^9.9.0",
    "eslint-config-flat-gitignore": "^0.1.8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-sonarjs": "^1.0.4",
    "jsdom": "^24.1.1",
    "lefthook": "^1.7.12",
    "msw": "^2.3.5",
    "optionator": "^0.9.4",
    "prettier": "^3.3.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0",
    "vite": "^5.4.0",
    "vite-plugin-checker": "^0.7.2",
    "vite-plugin-static-copy": "^1.0.6",
    "vitest": "^2.0.4",
    "wsdot-route-utils": "^3.0.0"
  },
  "overrides": {
    "eslint": "$eslint"
  },
  "repository": {
    "url": "https://github.com/WSDOT-GIS/wsdot-mp-map.git",
    "type": "git"
  },
  "keywords": [
    "arcgis",
    "wsdot",
    "milepost",
    "map",
    "gis",
    "lrs",
    "linear-referencing"
  ],
  "author": "Jeff Jacobson",
  "license": "Unlicense",
  "dependencies": {
    "@esri/calcite-components": "^2.10.1",
    "@fontsource/inconsolata": "^5.0.18",
    "@fontsource/lato": "^5.0.21",
    "@types/geojson": "^7946.0.14",
    "@wsdot/land-use-codes": "github:WSDOT-GIS/land-use",
    "@wsdot/web-styles": "github:WSDOT-GIS/wsdot-web-styles",
    "browser-update": "^3.3.53",
    "dms-conversion": "^3.1.3"
  }
}
