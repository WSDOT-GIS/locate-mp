{
	"name": "@wsdot/locate-mp",
	"private": true,
	"version": "0.0.0",
	"description": "Milepost map written with ArcGIS Maps API for JavaScript",
	"type": "module",
	"scripts": {
		"prepare": "bun --bun tools/copy-wsdot-webstyles.ts",
		"build-and-tsc": "bun ./tools/build.ts",
		"build": "vite build",
		"watch": "vite build -- --watch",
		"preview": "vite preview",
		"build-and-preview": "bun run build && bun run preview -- --open",
		"clean": "git clean -dfx --exclude \"node_modules/**\" --exclude \".mailmap\" --exclude \".env.local\"",
		"dev": "vite",
		"dev-browserstack": "vite --host",
		"lint": "biome check .",
		"publish": "npm run build && node tools/publish.mjs",
		"test": "vitest run --bail 1",
		"test:watch": "vitest",
		"spell": "cspell ."
	},
	"dependencies": {
		"@analytics/google-tag-manager": "^0.6.0",
		"@arcgis/core": "^4.32.8",
		"@arcgis/map-components": "^4.33.19",
		"@esri/calcite-components": "^3.2.1",
		"@fontsource/inconsolata": "^5.2.7",
		"@fontsource/lato": "^5.2.5",
		"@fontsource/overpass": "^5.2.7",
		"@terraformer/arcgis": "^2.1.2",
		"@types/geojson": "^7946.0.16",
		"@types/jsdom": "^21.1.7",
		"@wsdot/land-use-codes": "github:WSDOT-GIS/land-use",
		"@wsdot/web-styles": "github:WSDOT-GIS/wsdot-web-styles#v1.0.1",
		"analytics": "^0.8.16",
		"browser-update": "^3.3.55",
		"dms-conversion": "^3.1.4",
		"wsdot-route-utils": "^3.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/arcgis-rest-api": "^10.4.8",
		"@types/browser-update": "^3.3.3",
		"@types/bun": "latest",
		"@types/node": "^24.3.1",
		"@types/terraformer__arcgis": "^2.0.5",
		"@vitest/coverage-istanbul": "^3.1.3",
		"@vitest/coverage-v8": "^3.1.3",
		"@wsdot/arcgis-core-helper": "^1.1.2",
		"browserslist-to-esbuild": "^2.1.1",
		"cspell": "^9.0.1",
		"jsdom": "^26.1.0",
		"msw": "^2.11.2",
		"optionator": "^0.9.4",
		"svgo": "^4.0.0",
		"svgson": "^5.3.1",
		"typescript": "^5.8.3",
		"vite": "^7.1.5",
		"vitest": "^3.1.3"
	},
	"repository": {
		"url": "https://github.com/WSDOT-GIS/wsdot-mp-map.git",
		"type": "git"
	},
	"keywords": [
		"arcgis",
		"wsdot",
		"milepost",
		"map",
		"gis",
		"lrs",
		"linear-referencing"
	],
	"author": "Jeff Jacobson",
	"license": "Unlicense"
}
